          },
          "conditions": [
            {
              "id": "check-threads-posts",
              "leftValue": "={{ $json.count }}",
              "rightValue": 0,
              "operator": {
                "type": "number",
                "operation": "gt"
              }
            }
          ],
          "combinator": "and"
        }
      },
      "id": "has-threads-posts",
      "name": "Has Threads Posts?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [690, 420]
    },
    {
      "parameters": {
        "fieldToSplitOut": "posts",
