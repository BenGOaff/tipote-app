          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"media_type\": \"{{ $('Split Threads Posts').item.json.image_url ? 'IMAGE' : 'TEXT' }}\",\n  \"text\": {{ JSON.stringify($('Split Threads Posts').item.json.commentary) }},\n  {{ $('Split Threads Posts').item.json.image_url ? '\"image_url\": \"' + $('Split Threads Posts').item.json.image_url + '\",' : '' }}\n  \"access_token\": \"{{ $('Split Threads Posts').item.json.access_token }}\"\n}",
        "options": {
          "response": {
            "response": {
              "fullResponse": true,
              "responseFormat": "autodetect"
            }
          }
        }
      },
