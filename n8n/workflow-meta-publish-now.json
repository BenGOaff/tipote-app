    {
      "parameters": {
        "jsCode": "// Publish to Instagram via Graph API.\n// Supports both IMAGE posts and REELS (video).\n// Instagram requires a 3-step async process:\n//   1. Create media container\n//   2. Poll until status = FINISHED\n//   3. Publish the container\n\nconst body = $input.first().json.body || $input.first().json;\nconst accessToken = body.access_token || '';\nconst igUserId = body.platform_user_id || '';\nconst caption = body.commentary || '';\nconst imageUrl = body.image_url || '';\nconst videoUrl = body.video_url || '';\nconst callbackUrl = body.callback_url || '';\nconst contentId = body.content_id || '';\nconst sharedSecret = $env.N8N_SHARED_SECRET || '';\n\nconst GRAPH_BASE = 'https://graph.instagram.com/v21.0';\nlet publishSuccess = false;\nlet postId = '';\nlet publishError = '';\n\ntry {\n  // Step 1: Create media container\n  const isVideo = !!videoUrl;\n  const createBody = isVideo\n    ? { media_type: 'REELS', video_url: videoUrl, caption, access_token: accessToken }\n    : { image_url: imageUrl, caption, access_token: accessToken };\n\n  const createRes = await fetch(`${GRAPH_BASE}/${igUserId}/media`, {\n    method: 'POST',\n    headers: { 'Content-Type': 'application/json' },\n    body: JSON.stringify(createBody)\n  });\n\n  const createJson = await createRes.json();\n  if (!createRes.ok || !createJson.id) {\n    throw new Error(`Container creation failed: ${JSON.stringify(createJson)}`);\n  }\n  const creationId = createJson.id;\n\n  // Step 2: Poll for FINISHED status\n  const maxAttempts = isVideo ? 30 : 10;\n  const pollInterval = isVideo ? 5000 : 3000;\n  let ready = false;\n\n  for (let i = 0; i < maxAttempts; i++) {\n    const statusRes = await fetch(\n      `${GRAPH_BASE}/${creationId}?fields=status_code&access_token=${accessToken}`\n    );\n    const statusJson = await statusRes.json();\n    if (statusJson.status_code === 'FINISHED') { ready = true; break; }\n    if (statusJson.status_code === 'ERROR' || statusJson.status_code === 'EXPIRED') {\n      throw new Error(`Container failed: ${statusJson.status_code}`);\n    }\n    await new Promise(r => setTimeout(r, pollInterval));\n  }\n\n  if (!ready) throw new Error('Container not ready after polling');\n\n  // Step 3: Publish\n  const publishRes = await fetch(`${GRAPH_BASE}/${igUserId}/media_publish`, {\n    method: 'POST',\n    headers: { 'Content-Type': 'application/json' },\n    body: JSON.stringify({ creation_id: creationId, access_token: accessToken })\n  });\n\n  const publishJson = await publishRes.json();\n  if (!publishRes.ok || !publishJson.id) {\n    throw new Error(`Publish failed: ${JSON.stringify(publishJson)}`);\n  }\n\n  // Try to get shortcode for URL\n  try {\n    const scRes = await fetch(\n      `${GRAPH_BASE}/${publishJson.id}?fields=shortcode&access_token=${accessToken}`\n    );\n    const scJson = await scRes.json();\n    postId = scJson.shortcode || publishJson.id;\n  } catch {\n    postId = publishJson.id;\n  }\n\n  publishSuccess = true;\n} catch (e) {\n  publishError = e.message || 'instagram_publish_exception';\n}\n\n// Callback\nif (callbackUrl) {\n  try {\n    await fetch(callbackUrl, {\n      method: 'POST',\n      headers: { 'X-N8N-Secret': sharedSecret, 'Content-Type': 'application/json' },\n      body: JSON.stringify({\n        content_id: contentId,\n        platform: 'instagram',\n        success: publishSuccess,\n        postId: postId,\n        error: publishError || undefined\n      })\n    });\n  } catch {}\n}\n\nreturn [{ json: { ok: publishSuccess, postId, error: publishError || null } }];"
      },
