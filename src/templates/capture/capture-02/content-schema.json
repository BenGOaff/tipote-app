{
  "kind": "capture",
  "templateId": "capture-02",
  "name": "Page de capture Solo Expert",
  "description": "Template de capture avec section auteur + storytelling, promesses et témoignages optionnels",
  "fields": [
    {
      "key": "site_name_root",
      "type": "string",
      "source": "user",
      "label": "Nom du site",
      "description": "Partie principale du nom, ex: tipote",
      "maxLength": 20,
      "required": true
    },
    {
      "key": "site_name_tld",
      "type": "string",
      "source": "user",
      "label": "Extension du site",
      "description": "Extension, ex: .app ou .com",
      "maxLength": 10,
      "required": false
    },
    {
      "key": "site_name_full",
      "type": "string",
      "source": "user",
      "label": "Nom complet du site (footer)",
      "description": "Nom complet affiché dans le footer, ex: tipote.app",
      "maxLength": 30,
      "required": true
    },
    {
      "key": "main_headline",
      "type": "string",
      "source": "ai",
      "label": "Titre principal",
      "description": "Promesse principale impactante. Formule: problème + transformation + résultat chiffré + sans effort",
      "maxLength": 130,
      "required": true
    },
    {
      "key": "cta_text",
      "type": "string",
      "source": "ai",
      "label": "Texte du bouton CTA",
      "description": "Action orientée résultat pour s'inscrire",
      "maxLength": 35,
      "required": true
    },
    {
      "key": "hero_subtitle",
      "type": "string",
      "source": "ai",
      "label": "Sous-titre ciblage",
      "description": "Pour qui est cette offre — audience cible spécifique",
      "maxLength": 70,
      "required": true
    },
    {
      "key": "author_photo_url",
      "type": "string",
      "source": "user",
      "fallback": "placeholder",
      "inputType": "image_url",
      "label": "Photo de l'auteur",
      "description": "URL d'une photo portrait carrée, min 300x300px",
      "required": false
    },
    {
      "key": "author_name",
      "type": "string",
      "source": "user",
      "label": "Nom de l'auteur",
      "description": "Prénom et nom",
      "maxLength": 40,
      "required": true
    },
    {
      "key": "author_story",
      "type": "string",
      "source": "ai",
      "label": "Storytelling auteur",
      "description": "Brief storytelling qui donne confiance. Le prospect doit se dire que vous êtes la bonne personne pour l'accompagner.",
      "maxLength": 350,
      "required": true
    },
    {
      "key": "promises",
      "type": "object[]",
      "source": "ai",
      "label": "Promesses / bénéfices",
      "description": "3 promesses concrètes et désirables pour l'audience cible",
      "minItems": 3,
      "maxItems": 3,
      "itemSchema": {
        "text": {
          "type": "string",
          "maxLength": 110,
          "description": "Promesse concrète et transformation attendue"
        }
      },
      "required": true
    },
    {
      "key": "testimonials_title",
      "type": "string",
      "source": "ai",
      "label": "Titre section témoignages",
      "description": "Titre pour introduire les témoignages",
      "maxLength": 50,
      "required": false
    },
    {
      "key": "testimonials",
      "type": "object[]",
      "source": "user_or_ai",
      "fallback": "remove",
      "label": "Témoignages",
      "description": "3 témoignages texte. Si absents, la section est masquée.",
      "minItems": 3,
      "maxItems": 3,
      "itemSchema": {
        "name": { "type": "string", "maxLength": 25, "description": "Prénom du témoin" },
        "quote": { "type": "string", "maxLength": 150, "description": "Citation / témoignage" }
      },
      "required": false
    },
    {
      "key": "legal_privacy_url",
      "type": "string",
      "source": "user",
      "fallback": "placeholder",
      "inputType": "url",
      "label": "URL Politique de confidentialité",
      "maxLength": 200,
      "required": false
    },
    {
      "key": "legal_privacy_text",
      "type": "string",
      "source": "user",
      "label": "Texte lien confidentialité",
      "maxLength": 40,
      "required": false
    },
    {
      "key": "legal_mentions_url",
      "type": "string",
      "source": "user",
      "fallback": "placeholder",
      "inputType": "url",
      "label": "URL Mentions légales",
      "maxLength": 200,
      "required": false
    },
    {
      "key": "legal_mentions_text",
      "type": "string",
      "source": "user",
      "label": "Texte lien mentions",
      "maxLength": 40,
      "required": false
    },
    {
      "key": "legal_cgv_url",
      "type": "string",
      "source": "user",
      "fallback": "placeholder",
      "inputType": "url",
      "label": "URL CGV",
      "maxLength": 200,
      "required": false
    },
    {
      "key": "legal_cgv_text",
      "type": "string",
      "source": "user",
      "label": "Texte lien CGV",
      "maxLength": 40,
      "required": false
    },
    {
      "key": "footer_disclaimer",
      "type": "string",
      "source": "ai",
      "label": "Disclaimer footer",
      "description": "Mention légale standard",
      "maxLength": 150,
      "required": false
    }
  ]
}